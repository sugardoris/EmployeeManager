@model EmployeeManager.Model.League

@{
    ViewData["Title"] = "Detalji";
}

<h1>Detalji o ligi</h1>

@if (Model != null)
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Popis liga</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div>
        <h4>Liga</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Naziv:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                Broj kola:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NumberOfGameweeks)
            </dd>
        </dl>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Uredi</a>
        </div>
    </div>

}
else
{
    <div class="alert alert-danger">
        Ne postoji ta liga u sustavu.
    </div>

}