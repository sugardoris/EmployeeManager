@model StudentFilterModel

<form action="@Url.Action("Index")" method="post">
    <div class="form-row">
        <div class="col-3">
            <input asp-for="FullName" class="form-control" type="text" placeholder="Ime i prezime" />
        </div>
        <div class="col-2">
            <input asp-for="Email" class="form-control" type="text" placeholder="Email" />
        </div>
        <div class="col-2">
            <input asp-for="City" class="form-control" type="text" placeholder="Grad" />
        </div>
        <div class="col-3">
            <button type="submit" class="btn btn-outline-primary">Pretraga</button>
            <a asp-action="Create" class="btn btn-outline-success">Novi student</a>
        </div>
    </div>
</form>

