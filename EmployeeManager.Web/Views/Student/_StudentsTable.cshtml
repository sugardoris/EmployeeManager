@using EmployeeManager.Model
@model List<Student>

<style>
	.studentLink {color: black;}
	.studentLink:hover {color: #0275d8; text-decoration: none}
</style>

<table style="margin-top: 20px;" class="table" id="tbl-students">
	<thead class="thead-light">
		<tr>
			<th>Student</th>
			<th>Email</th>
			<th>Grad</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
		<tr>
			<td>
				<a class="studentLink" asp-action="Details" asp-route-id="@item.Id">@item.FullName</a>
			</td>
			<td>@item.Email</td>
			<td>@item.City.Name</td>
			<td class="text-right">
				<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Uredi</a>
			</td>
		</tr>
		}
	</tbody>
</table>

