@model EmployeeManager.Model.Gameweek

@{
    ViewData["Title"] = "Dodavanje novog kola";
}

@{
    var pattern = System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower();
	pattern = pattern.Replace("DD", "D").Replace("D", "DD");
	pattern = pattern.Replace("MM", "M").Replace("M", "MM");
}

<div class="col-md-4">
    <form asp-action="Create">
        <div class="form-group">
            <label class="control-label">Redni broj kola</label>
            <input asp-for="OrdinalNumber" class="form-control" />
            <span asp-validation-for="OrdinalNumber" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label class="control-label">Broj utakmica</label>
            <input asp-for="NumberOfGames" class="form-control" />
            <span asp-validation-for="NumberOfGames" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label class="control-label">Datum početka</label>
            <div class="input-group date" data-provide="datepicker" 
                 data-date-format="@System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()">
                <input asp-for="StartDate" type="text" class="form-control">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>
            </div>
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="EndDate" class="control-label">Datum završetka</label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label class="control-label">Liga</label>
            <select asp-for="LeagueId" asp-items="ViewBag.PossibleLeagues" class="form-control"></select>
            <span asp-validation-for="LeagueId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label class="control-label">Student</label>
            <select asp-for="StudentId" asp-items="ViewBag.PossibleStudents" class="form-control"></select>
            <span asp-validation-for="StudentId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <input type="submit" value="Spremi" class="btn btn-outline-success" />
        </div>
    </form>
</div>